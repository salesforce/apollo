<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Stop output INFO at start -->
    <statusListener
        class="ch.qos.logback.core.status.NopStatusListener" />

    <appender name="STDOUT"
        class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>
                %d{mm:ss.SSS} [%thread] %-5level %logger{0} - 
    %msg%n
            </Pattern>
        </encoder>
    </appender>
    
    <appender name="FILE"
        class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy
            class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover -->
            <fileNamePattern>target/func-test-metrics.%d{yyyy-MM-dd}.log</fileNamePattern>

            <!-- Keep 7 days' worth of history -->
            <maxHistory>7</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d{HH:mm:ss.SSS} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.salesforce.apollo" level="INFO"
        additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.salesforce.apollo.fireflies" level="WARN"
        additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.salesforce.apollo.avalanche" level="INFO"
        additivity="false">
        <appender-ref ref="STDOUT" />
    </logger> 
    <logger name="io.netty.handler.ssl" level="INFO" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="io.netty" level="INFO" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="func-metrics" level="INFO" additivity="false">
        <appender-ref ref="FILE" /> 
    </logger>
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>