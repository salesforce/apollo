<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Stop output INFO at start -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%d{mm:ss.SSS} %logger{0} - %msg%n</Pattern>
        </encoder>
    </appender>
    <logger name="com.salesforce.apollo.stereotomy" level="warn" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="com.salesforce.apollo.ethereal.DagReader" level="warn" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="com.salesforce.apollo.ethereal" level="info" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="com.salesforce.apollo.ethereal.Creator" level="info" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="com.salesforce.apollo.ethereal.linear.Extender" level="info" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="com.salesforce.apollo.ethereal.linear.TimingRound" level="info" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="com.salesforce.apollo.ethereal.linear.UnanimousVoter" level="info" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="com.salesforce.apollo.ethereal.Ethereal" level="info" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="com.salesforce.apollo.ethereal.memberships" level="info" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="com.salesforce.apollo.membership.messaging.rbc" level="warn" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="com.salesforce.apollo.comm" level="warn" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="com.salesforce.apollo.ethereal.Adder" level="info" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="com.salesforce.apollo.ethereal.Dag" level="info" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

</configuration>
