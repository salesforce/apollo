<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Stop output INFO at start -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>
                %d{mm:ss.SSS} %msg%n
            </Pattern>
        </encoder>
    </appender>
    <logger name="com.salesforce.apollo.stereotomy" level="warn" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
    <logger name="com.salesforce.apollo.ethereal.DagReader" level="warn" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.salesforce.apollo.ethereal" level="info" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.salesforce.apollo.ethereal.Creator" level="trace" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.salesforce.apollo.ethereal.linear.Adder" level="info" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.salesforce.apollo.ethereal.linear.Extender" level="trace" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.salesforce.apollo.ethereal.linear.CommonRandomPermutation" level="info" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.salesforce.apollo.ethereal.linear.TimingRound" level="info" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.salesforce.apollo.ethereal.Ethereal" level="trace" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.salesforce.apollo.ethereal.memberships" level="info" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger> 
    <logger name="com.salesforce.apollo.membership.messaging.rbc" level="warn" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.salesforce.apollo.comm" level="warn" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

</configuration>