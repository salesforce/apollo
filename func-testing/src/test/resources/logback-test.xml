<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Stop output INFO at start -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />

    <appender name="STDOUT"
        class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>
                %d{mm:ss.SSS} [%thread] %-5level %logger{36} -
  %msg%n
            </Pattern>
        </encoder>
    </appender>

    <logger name="com.salesforce.conduit" level="WARN"
        additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    
    <logger name="com.salesforce.conduit.consensual" level="WARN"
        additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    
    <logger name="com.salesforce.conduit.consensual.managed" level="WARN"
        additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="com.salesforce.apollo" level="WARN"
        additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>  
    <logger name="com.salesforce.apollo.whisp" level="WARN"
        additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>   
    
    
    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>